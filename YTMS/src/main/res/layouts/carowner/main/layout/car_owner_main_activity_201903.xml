<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/topUserInfoView"
        layout="@layout/top_user_info"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <FrameLayout
        android:id="@+id/menuBtn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_alloc_car"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/topUserInfoView"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView style="@style/ButtonMainMenu" />

        <TextView
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="35.3dp"
            android:text="배차" />

    </FrameLayout>

    <ImageView
        android:id="@+id/menuBtn0Divider0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="162.3dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn0"
        app:layout_constraintTop_toTopOf="@id/menuBtn0"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn0" />

    <ImageView
        android:id="@+id/menuBtn0Divider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88.7dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn0"
        app:layout_constraintTop_toTopOf="@id/menuBtn0"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn0" />

    <TextView
        android:id="@+id/menuBtn0SubTitle0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22.7dp"
        android:text="주문\n접수"
        app:layout_constraintTop_toTopOf="@+id/menuBtn0"
        app:layout_constraintEnd_toStartOf="@id/menuBtn0Divider0" />

    <TextView
        android:id="@+id/menuBtn0CntTxt0"
        style="@style/TextViewMainMenuSub"
        android:textColor="#3668a5"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0SubTitle0"
        app:layout_constraintStart_toStartOf="@id/menuBtn0SubTitle0" />

    <TextView
        android:id="@+id/menuBtn0CntUnit0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="4dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn0CntTxt0"
        app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn0CntTxt0" />

    <TextView
        android:id="@+id/menuBtn0SubTitle1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="22.7dp"
        android:text="배차\n진행"
        app:layout_constraintTop_toTopOf="@+id/menuBtn0SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtn0Divider0" />

    <TextView
        android:id="@+id/menuBtn0CntTxt1"
        style="@style/TextViewMainMenuSub"
        android:textColor="#3668a5"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0SubTitle1"
        app:layout_constraintStart_toStartOf="@id/menuBtn0SubTitle1" />

    <TextView
        android:id="@+id/menuBtn0CntUnit1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="4dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn0CntTxt1"
        app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn0CntTxt1" />

    <TextView
        android:id="@+id/menuBtn0SubTitle2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="22.7dp"
        android:text="배송\n완료"
        app:layout_constraintTop_toTopOf="@+id/menuBtn0SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtn0Divider1" />

    <TextView
        android:id="@+id/menuBtn0CntTxt2"
        style="@style/TextViewMainMenuSub"
        android:textColor="#3668a5"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0SubTitle0"
        app:layout_constraintStart_toStartOf="@id/menuBtn0SubTitle2" />

    <TextView
        android:id="@+id/menuBtn0CntUnit2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="4dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn0CntTxt2"
        app:layout_constraintBaseline_toBaselineOf="@+id/menuBtn0CntTxt2" />

    <TextView
        android:id="@+id/carAllocBadgeCntTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="24.3dp"
        android:minWidth="23dp"
        android:minHeight="23dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge"
        android:text="N"
        app:fontFamily="@font/my_nanum_square_r"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn0"
        app:layout_constraintEnd_toEndOf="@id/menuBtn0" />

    <FrameLayout
        android:id="@+id/menuBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_main_menu_receipt"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/ButtonMainMenu"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="64dp"
            android:text="인수증 이미지 발송확인" />

        <TextView
            android:id="@+id/menuBtn1IconTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="30dp"
            android:text="인수증" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menuBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_button_main_menu_calculate"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/ButtonMainMenu"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="90dp"
            android:text="운임내역 확인" />

        <TextView
            android:id="@+id/menuBtn2IconTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_marginStart="35dp"
            android:layout_gravity="start|bottom"
            android:text="정산" />

    </FrameLayout>

    <Button
        android:id="@+id/menuBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical|start"
        android:drawablePadding="8.3dp"
        android:drawableStart="@drawable/selector_icon_main_menu_fork_lift_standby"
        android:paddingStart="48dp"
        android:paddingBottom="6dp"
        android:textColor="@color/selector_button_main_menu_icon_text"
        android:textSize="13.2dp"
        android:text="하차대기"
        android:background="@drawable/selector_button_main_menu_small"
        android:stateListAnimator="@null"
        android:onClick="onClick"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="@id/menuBtn0"
        app:layout_constraintEnd_toStartOf="@id/menuBtn4" />

    <Button
        android:id="@+id/menuBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical|start"
        android:drawablePadding="8.3dp"
        android:drawableStart="@drawable/selector_icon_main_menu_notice"
        android:paddingStart="48.7dp"
        android:paddingBottom="6dp"
        android:textColor="@color/selector_button_main_menu_icon_text"
        android:textSize="13.2dp"
        android:text="공지사항"
        android:background="@drawable/selector_button_main_menu_small"
        android:stateListAnimator="@null"
        android:onClick="onClick"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@+id/menuBtn3"
        app:layout_constraintStart_toEndOf="@id/menuBtn3"
        app:layout_constraintEnd_toEndOf="@id/menuBtn0" />

    <TextView
        android:id="@+id/noticeBadgeCntTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57.5dp"
        android:layout_marginEnd="19.3dp"
        android:paddingEnd="1dp"
        android:minWidth="18.3dp"
        android:minHeight="18.3dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge"
        android:text="0"
        app:fontFamily="@font/my_nanum_square_r"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn4"
        app:layout_constraintEnd_toEndOf="@id/menuBtn4" />

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
