<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15.3dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/bg_gray">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        style="@style/Scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:background="@drawable/bg_round_white">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            app:columnCount="2">

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="차종"
                app:layout_gravity="fill" />

            <com.trevor.library.widget.DropDownSelector
                android:id="@+id/car_typeSelector"
                android:layout_width="210dp"
                android:layout_height="40dp"
                app:layout_gravity="center_vertical"
                app:hint="차종 선택"
                app:drawBorder="true" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="차량구분"
                app:layout_gravity="fill" />

            <!--<com.trevor.library.widget.DropDownSelector-->
            <!--android:id="@+id/car_gbSelector"-->
            <!--android:layout_width="210dp"-->
            <!--android:layout_height="43dp"-->
            <!--app:layout_gravity="center_vertical"-->
            <!--app:entries="@array/carSortList"-->
            <!--app:hint="차량구분 선택"-->
            <!--app:drawBorder="true" />-->

            <EditText
                android:id="@+id/car_gbEdit"
                style="@style/EditTextTableItem"
                android:imeOptions="actionDone"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="톤수"
                app:layout_gravity="fill" />

            <com.trevor.library.widget.DropDownSelector
                android:id="@+id/car_tonSelector"
                android:layout_width="210dp"
                android:layout_height="43dp"
                app:layout_gravity="center_vertical"
                app:hint="톤수 선택"
                app:drawBorder="true" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="적재함길이"
                app:layout_gravity="fill" />

            <!--<com.trevor.library.widget.DropDownSelector-->
            <!--android:id="@+id/load_typeSelector"-->
            <!--android:layout_width="210dp"-->
            <!--android:layout_height="43dp"-->
            <!--app:layout_gravity="center_vertical"-->
            <!--app:entries="@array/cargoBoxLengthList"-->
            <!--app:hint="적재함길이 선택"-->
            <!--app:drawBorder="true" />-->

            <EditText
                android:id="@+id/load_typeEdit"
                style="@style/EditTextTableItem"
                app:layout_gravity="center_vertical" />

        </android.support.v7.widget.GridLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>