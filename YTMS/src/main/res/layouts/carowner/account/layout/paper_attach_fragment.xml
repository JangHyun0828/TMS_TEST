<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_round_white"
        app:layout_constraintTop_toTopOf="@+id/column0Txt"
        app:layout_constraintBottom_toBottomOf="@+id/scroll" />

    <TextView
        android:id="@+id/column0Txt"
        style="@style/TextViewTableItem"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="구분"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/column1Txt" />

    <TextView
        android:id="@+id/column1Txt"
        style="@style/TextViewTableItem"
        android:layout_width="210dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="사진 첨부"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/columnDivider"
        style="@style/DividerLineTable"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toBottomOf="@+id/column0Txt" />

    <ScrollView
        android:id="@+id/scroll"
        style="@style/Scrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/columnDivider"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            app:columnCount="2">

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="사업자등록증"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn0"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="차량등록증"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn1"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="통장사본"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn2"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="운전면허증"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn3"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="적재물보험증"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn4"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="운전경력증명서"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn5"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="화물운송증명서"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn6"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

            <View
                style="@style/DividerLineTable"
                app:layout_columnSpan="2" />

            <TextView
                style="@style/TextViewTableItem"
                android:layout_height="60dp"
                android:text="지방세납부현황"
                app:layout_gravity="fill" />

            <ImageButton
                android:id="@+id/cameraBtn7"
                android:layout_width="210dp"
                android:layout_height="28.3dp"
                android:src="@drawable/img_join_membership_3_camera"
                android:background="@drawable/selector_button_round_wide_blue"
                app:layout_gravity="center_vertical" />

        </android.support.v7.widget.GridLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>