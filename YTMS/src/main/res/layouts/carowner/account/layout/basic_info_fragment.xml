<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15.3dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/bg_gray">

    <TableLayout
        android:id="@+id/basicInfoTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:background="@drawable/bg_round_white">

        <LinearLayout
            android:minHeight="46.7dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/TextViewTableItem"
                android:text="차량번호" />

            <TextView
                style="@style/TextViewTableItemStar"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/car_noEdit"
                style="@style/EditTextTableItem"
                android:enabled="false" />

        </LinearLayout>

        <View style="@style/DividerLineTable" />

        <LinearLayout
            android:minHeight="46.7dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/TextViewTableItem"
                android:text="전화번호" />

            <TextView
                style="@style/TextViewTableItemStar"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/mobile_no_edit"
                style="@style/EditTextTableItem"
                android:inputType="phone"
                android:enabled="false" />

        </LinearLayout>

        <View style="@style/DividerLineTable" />

        <LinearLayout
            android:minHeight="46.7dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/TextViewTableItem"
                android:text="이름" />

            <TextView
                style="@style/TextViewTableItemStar"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/user_nmEdit"
                style="@style/EditTextTableItem"
                android:enabled="false" />

        </LinearLayout>

        <View style="@style/DividerLineTable" />

        <LinearLayout
            android:minHeight="46.7dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/TextViewTableItem"
                android:text="비밀번호" />

            <TextView
                style="@style/TextViewTableItemStar"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/userPwEdit"
                style="@style/EditTextTableItem"
                android:hint="숫자나 문자 모두 가능"
                android:inputType="textPassword" />

        </LinearLayout>

        <View style="@style/DividerLineTable" />

        <LinearLayout
            android:minHeight="46.7dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/TextViewTableItem"
                android:text="비밀번호 확인" />

            <TextView
                style="@style/TextViewTableItemStar"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/userPwConfirmEdit"
                style="@style/EditTextTableItem"
                android:inputType="textPassword"
                android:imeOptions="actionDone" />

        </LinearLayout>

    </TableLayout>

    <CheckBox
        android:id="@+id/privacyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="13.3sp"
        android:textColor="#4e4d4d"
        android:text="개인정보 취급방침 동의"
        android:button="@null"
        android:drawableEnd="@drawable/selector_switch"
        android:drawablePadding="5.3dp"
        app:layout_constraintTop_toBottomOf="@+id/basicInfoTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <CheckBox
        android:id="@+id/locationCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.7dp"
        android:textSize="13.3sp"
        android:textColor="#4e4d4d"
        android:text="위치정보제공 동의"
        android:button="@null"
        android:drawableEnd="@drawable/selector_switch"
        android:drawablePadding="5.3dp"
        app:layout_constraintTop_toBottomOf="@+id/privacyCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

</android.support.constraint.ConstraintLayout>