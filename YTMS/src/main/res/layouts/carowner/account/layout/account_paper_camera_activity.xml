<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/previewImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/cameraContainer"
        app:layout_constraintEnd_toEndOf="@id/cameraContainer"
        app:layout_constraintTop_toTopOf="@id/cameraContainer"
        app:layout_constraintBottom_toBottomOf="@id/cameraContainer" />

    <ProgressBar
        android:id="@+id/imgProgress"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cameraContainer"
        app:layout_constraintEnd_toEndOf="@id/cameraContainer"
        app:layout_constraintTop_toTopOf="@id/cameraContainer"
        app:layout_constraintBottom_toBottomOf="@id/cameraContainer"
        android:visibility="invisible"/>

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <View
        android:id="@+id/guideBg"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        android:background="#c5c8c9"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <TextView
        android:id="@+id/guideTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:drawableEnd="@drawable/img_camera"
        android:drawablePadding="8dp"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#323332"
        android:text="초점이 맞춰지도록 놓아주세요"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintStart_toStartOf="@id/guideBg"
        app:layout_constraintEnd_toEndOf="@id/guideBg"
        app:layout_constraintTop_toTopOf="@+id/guideBg"
        app:layout_constraintBottom_toBottomOf="@id/guideBg" />

    <Button
        android:id="@+id/takePhotoBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8.3dp"
        android:text="촬영"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/galleryBtn"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/showCameraBtn"
        style="@style/ButtonRoundMain"
        android:text="재촬영"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/takePhotoBtn"
        app:layout_constraintEnd_toEndOf="@id/takePhotoBtn"
        app:layout_constraintTop_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintBottom_toBottomOf="@id/takePhotoBtn" />

    <Button
        android:id="@+id/galleryBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="7.3dp"
        android:text="불러오기"
        app:layout_constraintStart_toEndOf="@id/takePhotoBtn"
        app:layout_constraintTop_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintEnd_toStartOf="@id/saveBtn" />

    <Button
        android:id="@+id/saveBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="7.3dp"
        android:layout_marginEnd="10dp"
        android:text="저장"
        app:layout_constraintStart_toEndOf="@id/galleryBtn"
        app:layout_constraintTop_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
