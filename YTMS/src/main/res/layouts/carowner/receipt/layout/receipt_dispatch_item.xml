<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="79dp"
    android:background="@color/bg_white">
    
    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="16.7dp"
        android:minHeight="30dp"
        android:gravity="center_vertical|start"
        android:textSize="13.3sp"
        android:textColor="#81a7ce"
        android:text="0000.00.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:fontFamily="@font/my_nanum_square_r" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:minHeight="38dp"
        android:paddingBottom="11.3dp"
        android:paddingEnd="16.7dp"
        android:gravity="start"
        android:lineSpacingExtra="3sp"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="고객사명"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt0"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toStartOf="@id/dataTitle2"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTitle2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="상차지:"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTxt1"
        app:layout_constraintStart_toEndOf="@id/dataTxt1"
        app:layout_constraintEnd_toStartOf="@id/dataTxt2"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="19dp"
        android:gravity="start|center_vertical"
        android:lineSpacingExtra="3sp"
        android:textSize="13.3sp"
        android:textColor="#3668a5"
        android:text="상차지명"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle2"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt3"
        app:layout_constraintStart_toEndOf="@id/dataTitle2"
        app:layout_constraintEnd_toStartOf="@id/cameraBtn"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTitle3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:gravity="start|center_vertical"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="하차지:"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt2"
        app:layout_constraintStart_toStartOf="@id/dataTitle2"
        app:layout_constraintEnd_toEndOf="@id/dataTitle2"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="19dp"
        android:paddingBottom="11.3dp"
        android:gravity="start|center_vertical"
        android:lineSpacingExtra="3sp"
        android:textSize="13.3sp"
        android:textColor="#253e66"
        android:text="하차지명"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle3"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt2"
        app:layout_constraintStart_toEndOf="@id/dataTitle2"
        app:layout_constraintEnd_toStartOf="@id/cameraBtn"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <ImageButton
        android:id="@+id/cameraBtn"
        android:layout_width="79.7dp"
        android:layout_height="31.3dp"
        android:paddingStart="9.3dp"
        android:paddingBottom="4.7dp"
        android:src="@drawable/img_camera_up"
        android:background="@drawable/selector_button_round_rect_wide_main_theme"
        android:layout_marginBottom="12.7dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>