<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <View
        android:id="@+id/palletsCntBar"
        android:layout_width="4.3dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:background="@color/main_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/palletsCntTitleTxt"
        app:layout_constraintBottom_toBottomOf="@+id/palletsCntTitleTxt" />

    <TextView
        android:id="@+id/palletsCntTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="상차화주 팔레트 수 입력"
        app:layout_constraintStart_toEndOf="@id/palletsCntBar"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <include
        android:id="@+id/palletsInputView"
        layout="@layout/pallets_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/palletsCntTitleTxt" />

    <Button
        android:id="@+id/bottomBtn0"
        style="@style/ButtonRoundMain"
        android:layout_marginTop="39.7dp"
        android:layout_marginStart="10dp"
        android:text="저장"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bottomBtn1"
        app:layout_constraintTop_toBottomOf="@+id/palletsInputView" />

    <Button
        android:id="@+id/bottomBtn1"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="7.3dp"
        android:text="수정"
        app:layout_constraintStart_toEndOf="@id/bottomBtn0"
        app:layout_constraintTop_toTopOf="@+id/bottomBtn0"
        app:layout_constraintEnd_toStartOf="@id/bottomBtn2" />

    <Button
        android:id="@+id/bottomBtn2"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="7.3dp"
        android:layout_marginEnd="10dp"
        android:text="닫기"
        app:layout_constraintStart_toEndOf="@id/bottomBtn1"
        app:layout_constraintTop_toTopOf="@+id/bottomBtn0"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
