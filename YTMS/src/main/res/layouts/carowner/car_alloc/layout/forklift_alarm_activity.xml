<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6.7dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@id/bottomBtn0"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notiIcon"
                android:layout_width="44.3dp"
                android:layout_height="44.3dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16.7dp"
                android:paddingTop="26dp"
                android:gravity="top|center_horizontal"
                android:includeFontPadding="false"
                android:textSize="10sp"
                android:textColor="#253e66"
                android:text="알림"
                android:background="@drawable/fork_alarm_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/areaTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13.7dp"
                android:layout_marginTop="5.7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#81a7ce"
                android:text="하차"
                app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
                app:layout_constraintStart_toEndOf="@id/notiIcon"
                app:layout_constraintTop_toTopOf="@+id/notiIcon" />

            <View
                android:id="@+id/areaDivider"
                android:layout_width="1dp"
                android:layout_height="13.7dp"
                android:layout_marginStart="10dp"
                android:background="#bfbebe"
                app:layout_constraintTop_toTopOf="@+id/areaTitleTxt"
                app:layout_constraintBottom_toBottomOf="@+id/areaTitleTxt"
                app:layout_constraintStart_toEndOf="@id/areaTitleTxt" />

            <TextView
                android:id="@+id/areaTxt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="9.7dp"
                android:includeFontPadding="false"
                android:textSize="13.3sp"
                android:textColor="#4e4d4d"
                android:text="- 구역 "
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                app:layout_constraintStart_toEndOf="@+id/areaDivider"
                app:layout_constraintTop_toTopOf="@+id/areaTitleTxt"
                app:layout_constraintBottom_toBottomOf="@+id/areaTitleTxt" />

            <TextView
                android:id="@+id/orderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="21.7dp"
                android:layout_marginTop="7.7dp"
                android:paddingStart="3.7dp"
                android:paddingEnd="3.7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#3668a5"
                android:text="대기순번 -번"
                android:background="#bfd7f1"
                app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
                app:layout_constraintTop_toBottomOf="@id/areaDivider"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                style="@style/Scrollbar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingTop="11.3dp"
                android:paddingStart="10.3dp"
                android:paddingEnd="10.3dp"
                app:layout_constraintStart_toStartOf="@id/orderTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderTxt"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/bottomBtn0"
        style="@style/ButtonRoundMain"
        android:layout_marginBottom="8.3dp"
        android:text="닫기"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
