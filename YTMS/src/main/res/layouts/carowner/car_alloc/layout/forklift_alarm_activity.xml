<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6.7dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@id/bottomBtn0"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/contentBg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_round_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/list" />

            <TextView
                android:id="@+id/areaTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7.3dp"
                android:drawableStart="@drawable/img_play"
                android:drawablePadding="7.3dp"
                android:paddingTop="7.7dp"
                android:paddingBottom="7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#4e4d4d"
                android:text="하차구역 : "
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                app:layout_constraintTop_toTopOf="@id/contentBg"
                app:layout_constraintStart_toStartOf="@id/contentBg"
                app:layout_constraintEnd_toStartOf="@id/areaTxt" />

            <TextView
                android:id="@+id/areaTxt"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:paddingTop="7.7dp"
                android:paddingBottom="7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#3668a5"
                android:text="- 구역 "
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                tools:layout_editor_absoluteY="10dp"
                tools:layout_editor_absoluteX="94dp" />

            <View
                android:id="@+id/areaDivider"
                android:layout_width="0dp"
                android:layout_height="0.7dp"
                android:background="#e5e5e5"
                app:layout_constraintTop_toBottomOf="@+id/areaTxt"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt"
                app:layout_constraintEnd_toEndOf="@id/areaTxt" />

            <TextView
                android:id="@+id/orderTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_play"
                android:drawablePadding="7.3dp"
                android:paddingTop="7.7dp"
                android:paddingBottom="7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#4e4d4d"
                android:text="대기순번 : "
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                app:layout_constraintTop_toBottomOf="@id/areaDivider"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt"
                app:layout_constraintEnd_toStartOf="@id/orderTxt" />

            <TextView
                android:id="@+id/orderTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.3dp"
                android:paddingTop="7.7dp"
                android:paddingBottom="7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#3668a5"
                android:text="-번"
                app:layout_constraintTop_toTopOf="@+id/orderTitleTxt"
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                app:layout_constraintStart_toEndOf="@id/orderTitleTxt"
                app:layout_constraintEnd_toEndOf="@id/contentBg" />

            <View
                android:id="@+id/orderDivider"
                android:layout_width="0dp"
                android:layout_height="0.7dp"
                android:background="#e5e5e5"
                app:layout_constraintTop_toBottomOf="@+id/orderTxt"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt"
                app:layout_constraintEnd_toEndOf="@id/areaTxt" />

            <TextView
                android:id="@+id/processTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/img_play"
                android:drawablePadding="7.3dp"
                android:paddingTop="7.7dp"
                android:paddingBottom="7dp"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#4e4d4d"
                android:text="진행상황"
                app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
                app:layout_constraintTop_toBottomOf="@id/orderDivider"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt" />

            <View
                android:id="@+id/processDivider"
                android:layout_width="0dp"
                android:layout_height="0.7dp"
                android:background="#e5e5e5"
                app:layout_constraintTop_toBottomOf="@+id/processTitleTxt"
                app:layout_constraintStart_toStartOf="@id/areaTitleTxt"
                app:layout_constraintEnd_toEndOf="@id/areaTxt" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                style="@style/Scrollbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/processDivider"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/bottomBtn0"
        style="@style/ButtonRoundMain"
        android:layout_marginBottom="8.3dp"
        android:text="닫기"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
