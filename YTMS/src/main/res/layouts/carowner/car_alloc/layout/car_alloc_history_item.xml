<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140.7dp">

    <ImageView
        android:id="@+id/bgImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15.7dp"
        android:layout_marginBottom="9.7dp"
        android:layout_marginStart="5.3dp"
        android:background="@drawable/bg_start_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/departBtn"
        android:layout_width="48.3dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:lineSpacingExtra="13.3sp"
        android:drawableTop="@drawable/date_check_box_off"
        android:drawablePadding="8.7dp"
        android:background="@null"
        android:stateListAnimator="@null"
        android:text="출발"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="30.3dp"
        android:layout_marginStart="6.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="일자: 0000.00.00 (일)"
        app:layout_constraintStart_toEndOf="@id/departBtn"
        app:layout_constraintEnd_toStartOf="@id/palletsInputBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt1"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="고객사 : 고객사"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt0"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt2"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="상차지 : 상차지"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt1"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="하차지 : 하차지"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt2"
        app:layout_constraintBottom_toTopOf="@+id/dataTitle4"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTitle4"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="비고 : "
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt4"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:text="비고"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle4"
        app:layout_constraintStart_toEndOf="@id/dataTitle4"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt5"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:drawableEnd="@drawable/selector_icon_alarm"
        android:drawablePadding="7.3dp"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="하차순서 확인"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt4"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:paddingTop="5dp"
        android:drawableTop="@drawable/btn_blue"
        android:drawablePadding="-3dp"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:text="인수증 촬영"
        android:background="@drawable/selector_button_round_rect_jean"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/palletsInputBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:lineSpacingExtra="-4dp"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:text="팔레트\n입력"
        android:gravity="center"
        android:background="@drawable/selector_button_round_rect_blue"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/chargeBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:layout_marginTop="9.7dp"
        android:layout_marginEnd="13dp"
        android:lineSpacingExtra="-4dp"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:text="상차완료\n운임받기"
        android:gravity="center"
        android:background="@drawable/selector_button_round_rect_main_theme"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:stateListAnimator="@null"
        app:layout_goneMarginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraBtn" />

    <Button
        android:id="@+id/palletsCntBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:layout_marginTop="9.7dp"
        android:layout_marginEnd="13dp"
        android:lineSpacingExtra="-4dp"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:text="팔레트 수\n0"
        android:gravity="center"
        android:background="@drawable/selector_button_round_rect_main_theme"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:stateListAnimator="@null"
        app:layout_goneMarginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraBtn" />

    <Space
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/dataTxt4" />

</android.support.constraint.ConstraintLayout>