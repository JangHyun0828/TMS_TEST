<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="98.7dp"
    android:paddingStart="10dp"
    android:paddingEnd="6dp"
    android:background="@color/white">

    <View
        android:id="@+id/leftBar"
        android:layout_width="4.3dp"
        android:layout_height="0dp"
        android:layout_marginTop="8.3dp"
        android:layout_marginBottom="2dp"
        android:background="#bfd7f1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dataTxt5" />

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="3.3dp"
        android:layout_marginStart="7dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="일자: 0000.00.00 (일)"
        app:layout_constraintStart_toEndOf="@id/leftBar"
        app:layout_constraintEnd_toStartOf="@id/palletsBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt1"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="고객사 : 명문제약"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt0"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt2"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="상차지 : 향남(명문제약)"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt1"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="하차지 : 안성물류센터"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt2"
        app:layout_constraintBottom_toTopOf="@+id/dataTitle4"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle4"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="비고 : "
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt4"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="수작업, 16시 이전상차요망"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle4"
        app:layout_constraintStart_toEndOf="@id/dataTitle4"
        app:layout_constraintEnd_toEndOf="@id/dataTxt0"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt5"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:drawableEnd="@drawable/icon_group_1_off"
        android:drawablePadding="7.3dp"
        android:textSize="16sp"
        android:textColor="#4babb7"
        android:text="하차순서 확인"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt4"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <Button
        android:id="@+id/takePhotoBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:paddingTop="5dp"
        android:drawableTop="@drawable/btn_blue"
        android:drawablePadding="-3dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="인수증 촬영"
        android:background="@drawable/selector_button_round_rect_navy"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/leftBar"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/palletsBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:lineSpacingExtra="-4dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="팔레트\n입력"
        android:gravity="center"
        android:background="@drawable/selector_button_round_rect_sky"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/leftBar" />

    <Button
        android:id="@+id/chargeBtn"
        android:layout_width="81dp"
        android:layout_height="51.7dp"
        android:layout_marginTop="9.7dp"
        android:lineSpacingExtra="-4dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="상차완료\n운임받기"
        android:gravity="center"
        android:background="@drawable/selector_button_round_rect_sky"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:stateListAnimator="@null"
        app:layout_goneMarginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/takePhotoBtn" />

    <Space
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="33.3dp"
        app:layout_constraintTop_toBottomOf="@id/dataTxt5" />

</android.support.constraint.ConstraintLayout>