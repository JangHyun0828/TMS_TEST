<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="30dp">

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7.7dp"
        android:paddingBottom="7dp"
        android:paddingStart="24dp"
        android:includeFontPadding="false"
        android:text="경기 00가 0000"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dataDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text=" : "
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toTopOf="@+id/dataTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/dataTxt0"
        app:layout_constraintStart_toEndOf="@id/dataTxt0" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7.7dp"
        android:paddingBottom="7dp"
        android:includeFontPadding="false"
        android:text="대기 중"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintStart_toEndOf="@id/dataDivider"
        app:layout_constraintTop_toTopOf="@+id/dataTxt0" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.7dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toBottomOf="@id/dataTxt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>