<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/topUserInfoView"
        layout="@layout/top_user_info"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <FrameLayout
        android:id="@+id/menuBtn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_button_main_menu_car_request"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/topUserInfoView"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/ButtonMainMenu"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end"
            android:paddingEnd="104dp"
            android:text="차량요청" />

        <TextView
            android:id="@+id/menuBtn0IconTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="35.3dp"
            android:text="접수" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menuBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_button_main_menu_status_big"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/menuBtn1IconTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="35.3dp"
            android:text="확인" />

        <TextView
            style="@style/ButtonMainMenu"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="104dp"
            android:text="요청내역" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menuBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_button_alloc_car"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView style="@style/ButtonMainMenu" />

        <TextView
            android:id="@+id/menuBtn12conTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="35.3dp"
            android:text="배차" />

    </FrameLayout>

    <ImageView
        android:id="@+id/menuBtnDivider0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="162.3dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn2"
        app:layout_constraintTop_toTopOf="@id/menuBtn2"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn2" />

    <ImageView
        android:id="@+id/menuBtnDivider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88.7dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn2"
        app:layout_constraintTop_toTopOf="@id/menuBtn2"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn2" />

    <TextView
        android:id="@+id/menuBtn2SubTitle0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginTop="6.5dp"
        android:layout_marginEnd="21dp"
        android:text="차량\n접수"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2"
        app:layout_constraintEnd_toStartOf="@id/menuBtnDivider0" />

    <TextView
        android:id="@+id/menuBtn2CntTxt0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="@color/main_theme"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2SubTitle0"
        app:layout_constraintStart_toStartOf="@id/menuBtn2SubTitle0" />

    <TextView
        android:id="@+id/menuBtn2CntUnit0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn2CntTxt0"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2CntTxt0" />

    <TextView
        android:id="@+id/menuBtn2SubTitle1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="16.7dp"
        android:text="배차\n진행"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtnDivider0" />

    <TextView
        android:id="@+id/menuBtn2CntTxt1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="@color/main_theme"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2SubTitle1"
        app:layout_constraintStart_toStartOf="@id/menuBtn2SubTitle1" />

    <TextView
        android:id="@+id/menuBtn2CntUnit1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn2CntTxt1"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2CntTxt1" />

    <TextView
        android:id="@+id/menuBtn2SubTitle2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="16.7dp"
        android:text="배차\n완료"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtnDivider1" />

    <TextView
        android:id="@+id/menuBtn2CntTxt2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="@color/main_theme"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2SubTitle0"
        app:layout_constraintStart_toStartOf="@id/menuBtn2SubTitle2" />

    <TextView
        android:id="@+id/menuBtn2CntUnit2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="건"
        app:layout_constraintStart_toEndOf="@id/menuBtn2CntTxt2"
        app:layout_constraintTop_toTopOf="@+id/menuBtn2CntTxt2" />

    <FrameLayout
        android:id="@+id/menuBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.7dp"
        android:background="@drawable/selector_button_main_menu_notice"
        android:clickable="true"
        android:onClick="onClick"
        android:stateListAnimator="@null"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/ButtonMainMenu"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="102.7dp"
            android:text="공지사항" />

        <TextView
            android:id="@+id/menuBtn3IconTxt"
            style="@style/TextViewMainMenuIcon"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="24dp"
            android:text="공지사항" />

    </FrameLayout>

    <TextView
        android:id="@+id/noticeBadgeCntTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="24.3dp"
        android:minWidth="23dp"
        android:minHeight="23dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge"
        android:text="0"
        app:fontFamily="@font/my_nanum_square_r"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn3"
        app:layout_constraintEnd_toEndOf="@id/menuBtn3" />

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>