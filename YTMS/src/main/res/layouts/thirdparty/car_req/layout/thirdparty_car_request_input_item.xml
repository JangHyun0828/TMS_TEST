<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10.7dp"
    android:paddingBottom="10.7dp">

    <TextView
        android:id="@+id/custTxt"
        android:layout_width="match_parent"
        android:layout_height="24.3dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:textSize="16.7sp"
        android:textColor="#4e4d4d"
        android:lineSpacingExtra="3.3sp"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:text="화주사 : 메딕약국"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/minusBtn"
        app:layout_constraintEnd_toStartOf="@id/plusBtn" />

    <TextView
        android:id="@+id/centerTxt"
        android:layout_width="match_parent"
        android:layout_height="24.3dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:textSize="16.7sp"
        android:textColor="#4e4d4d"
        android:lineSpacingExtra="3.3sp"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:text="하차지 : 안성물류센터"
        app:layout_constraintTop_toBottomOf="@+id/custTxt"
        app:layout_constraintStart_toEndOf="@id/minusBtn"
        app:layout_constraintEnd_toStartOf="@id/plusBtn" />

    <TextView
        android:id="@+id/remarkTxt"
        android:layout_width="match_parent"
        android:layout_height="24.3dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:textSize="16.7sp"
        android:textColor="#4e4d4d"
        android:lineSpacingExtra="3.3sp"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:text="요청사항 : 05:30납품, 수작업 필요"
        app:layout_constraintTop_toBottomOf="@+id/centerTxt"
        app:layout_constraintStart_toEndOf="@id/minusBtn"
        app:layout_constraintEnd_toStartOf="@id/plusBtn" />

    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.7dp"
        android:src="@drawable/img_pallet"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/remarkTxt"
        app:layout_constraintStart_toStartOf="@id/remarkTxt"
        app:layout_constraintEnd_toStartOf="@id/minusBtn" />

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26.3dp"
        android:src="@drawable/minus"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        app:layout_constraintTop_toBottomOf="@+id/remarkTxt"
        app:layout_constraintStart_toEndOf="@id/itemImg"
        app:layout_constraintEnd_toStartOf="@id/itemsCntEdit" />

    <EditText
        android:id="@+id/itemsCntEdit"
        android:layout_width="81.3dp"
        android:layout_height="41.3dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="5"
        android:inputType="numberSigned"
        android:textSize="16.7sp"
        android:textColor="#4e4d4d"
        android:lineSpacingExtra="3.3sp"
        android:background="@drawable/bg_input_rect_round_white_stroke_gray"
        app:fontFamily="@font/nanum_square_r"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        app:layout_constraintStart_toEndOf="@id/minusBtn"
        app:layout_constraintEnd_toStartOf="@id/plusBtn" />

    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.7dp"
        android:layout_marginEnd="15.6dp"
        android:src="@drawable/plus"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        app:layout_constraintStart_toEndOf="@id/itemsCntEdit"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>