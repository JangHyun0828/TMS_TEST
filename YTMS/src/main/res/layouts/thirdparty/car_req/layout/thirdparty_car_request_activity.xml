<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/dateView"
        layout="@layout/date_selector"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dateView"
        app:layout_constraintBottom_toTopOf="@+id/saveBtn"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            style="@style/Scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingEnd="4dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <!-- 저장 / 요청내역 확인 -->
    <Button
        android:id="@+id/newBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8.3dp"
        android:text="추가"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/saveBtn"
        app:layout_constraintBottom_toTopOf="@+id/callCenterBtn" />

    <Button
        android:id="@+id/saveBtn"
        style="@style/ButtonRoundMain"
        android:text="수정"
        app:layout_constraintStart_toEndOf="@id/newBtn"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="@+id/newBtn" />

    <include
        android:id="@+id/callCenterBtn"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_center_height"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
