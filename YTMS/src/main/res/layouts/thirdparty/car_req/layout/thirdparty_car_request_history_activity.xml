<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/dateView"
        layout="@layout/date_selector"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <TextView
        android:id="@+id/sumTxt0"
        android:layout_width="0dp"
        android:layout_height="34.7dp"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="하차지 합계 :  000 건"
        app:layout_constraintTop_toBottomOf="@+id/dateView"
        app:layout_constraintEnd_toEndOf="@id/dateView"
        app:fontFamily="@font/noto_sans_kr_medium_hestia" />

    <View
        android:id="@+id/sumDivider"
        android:layout_width="0dp"
        android:layout_height="1.3dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/sumTxt0"
        app:layout_constraintTop_toBottomOf="@+id/sumTxt0" />

    <TextView
        android:id="@+id/sumTxt1"
        android:layout_width="0dp"
        android:layout_height="34.7dp"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="팔레트 합계 :  000 건"
        app:layout_constraintTop_toBottomOf="@+id/sumDivider"
        app:layout_constraintEnd_toEndOf="@id/dateView"
        app:fontFamily="@font/noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/columnTxt0"
        android:layout_width="0dp"
        android:layout_height="30.7dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="하차지"
        app:layout_constraintTop_toBottomOf="@+id/sumTxt1"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/columnTxt1"
        app:fontFamily="@font/noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/columnTxt1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="팔레트수"
        app:layout_constraintTop_toTopOf="@+id/columnTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/columnTxt0"
        app:layout_constraintStart_toEndOf="@id/columnTxt0"
        app:layout_constraintEnd_toStartOf="@id/columnTxt2"
        app:fontFamily="@font/noto_sans_kr_medium_hestia" />

    <TextView
    android:id="@+id/columnTxt2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center"
    android:textSize="16sp"
    android:textColor="@color/main_theme"
    android:text="요청자"
    app:layout_constraintTop_toTopOf="@+id/columnTxt0"
    app:layout_constraintBottom_toBottomOf="@+id/columnTxt0"
    app:layout_constraintStart_toEndOf="@id/columnTxt1"
    app:layout_constraintEnd_toStartOf="@id/endGuideline"
    app:fontFamily="@font/noto_sans_kr_medium_hestia" />

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1.3dp"
        android:background="@color/main_theme"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@+id/columnTxt0" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/dateView"
        app:layout_constraintBottom_toTopOf="@+id/closeBtn"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            style="@style/Scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingEnd="4dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <!-- 저장 / 요청내역 확인 -->
    <Button
        android:id="@+id/moveBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8.3dp"
        android:text="배차수정"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/closeBtn"
        app:layout_constraintBottom_toTopOf="@+id/callCenterBtn" />

    <Button
        android:id="@+id/closeBtn"
        style="@style/ButtonRoundMain"
        android:text="닫기"
        app:layout_constraintStart_toEndOf="@id/moveBtn"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="@+id/moveBtn" />

    <include
        android:id="@+id/callCenterBtn"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_center_height"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
