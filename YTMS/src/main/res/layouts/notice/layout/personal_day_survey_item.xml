<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="30.7dp">

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="19dp"
        android:drawableStart="@drawable/check_box_off"
        android:drawablePadding="20.3dp"
        android:gravity="center_vertical|start"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="0000.00.00 (일)"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:background="@drawable/selector_list_item" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>


