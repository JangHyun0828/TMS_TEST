<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp">

    <View
        android:id="@+id/titleBgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/titleTxt"
        android:layout_alignBottom="@+id/titleTxt"
        android:layout_alignStart="@+id/newTxt"
        android:layout_alignEnd="@+id/toggleImg"/>

    <TextView
        android:id="@+id/newTxt"
        android:layout_width="16.7dp"
        android:layout_height="16.7dp"
        android:layout_marginStart="7.3dp"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/titleTxt"
        android:gravity="center"
        android:textSize="11.7sp"
        android:textColor="#ffffff"
        android:text="N"
        android:background="@drawable/bg_badge"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/newTxt"
        android:layout_toStartOf="@+id/toggleImg"
        android:minHeight="39.3dp"
        android:gravity="center_vertical|start"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text="2018년 11월 27일 샌드위치데이 휴무 조사"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <ImageView
        android:id="@+id/toggleImg"
        android:layout_width="wrap_content"
        android:layout_height="39.3dp"
        android:layout_marginStart="7.3dp"
        android:layout_marginEnd="7.3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/titleTxt"
        android:src="@drawable/selector_drop_down_arrow" />

    <TextView
        android:id="@+id/contentTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleTxt"
        android:minHeight="53.4dp"
        android:paddingBottom="10dp"
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:gravity="top|start"
        android:lineSpacingExtra="15sp"
        android:includeFontPadding="false"
        android:textSize="15sp"
        android:textColor="#4d4c4c"
        android:text="2018년 11월 27일 근무 여부에 대해 확인해 주시면 감사하겠습니다."
        android:background="@drawable/selector_list_item"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.7dp"
        android:layout_alignStart="@id/newTxt"
        android:layout_alignEnd="@id/toggleImg"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:background="#e5e5e5" />

</RelativeLayout>