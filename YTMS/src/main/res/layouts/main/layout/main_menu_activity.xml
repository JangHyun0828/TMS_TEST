<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/topUserInfoView"
        layout="@layout/top_user_info"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/menuGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.7dp"
        app:columnCount="3"
        app:layout_constraintTop_toBottomOf="@+id/topUserInfoView"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/mainMenuBtn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_button_main_menu_0"
            android:background="@null"
            android:onClick="onClick"
            app:layout_gravity="center_vertical|end" />

        <ImageView
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/circle_line_1"
            app:layout_gravity="center" />

        <ImageButton
            android:id="@+id/mainMenuBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_button_main_menu_1"
            android:background="@null"
            android:onClick="onClick" />

        <ImageView
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/circle_line_2"
            app:layout_column="0"
            app:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="4.7dp"
            android:src="@drawable/circle_line_2"
            app:layout_column="2"
            app:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/mainMenuBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_button_main_menu_2"
            android:background="@null"
            android:onClick="onClick"
            app:layout_gravity="center_vertical|end" />

        <ImageView
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/circle_line_1"
            app:layout_gravity="center" />

        <ImageButton
            android:id="@+id/mainMenuBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_button_main_menu_3"
            android:background="@null"
            android:onClick="onClick" />

        <ImageView
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/circle_line_2"
            app:layout_column="0"
            app:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/circle_line_2"
            app:layout_column="2"
            app:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/mainMenuBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_button_main_menu_4"
            android:background="@null"
            android:onClick="onClick"
            app:layout_gravity="center_vertical|end" />

        <ImageView
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:src="@drawable/circle_line_1"
            app:layout_gravity="center" />

        <FrameLayout>

            <ImageButton
                android:id="@+id/mainMenuBtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_button_main_menu_5"
                android:background="@null"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/noticeBadgeCntTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.7dp"
                android:layout_marginEnd="22.3dp"
                android:layout_gravity="top|end"
                android:minWidth="23dp"
                android:minHeight="23dp"
                android:gravity="center"
                android:textSize="14.8sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_badge"
                android:text="0"
                android:fontFamily="@font/my_nanum_square_eb" />

        </FrameLayout>

    </android.support.v7.widget.GridLayout>

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
