<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42.3dp"
    android:background="#e5e5e5">

    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        android:text="합계"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/totalTxt"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/totalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@id/totalUnitTxt"
        app:layout_constraintBaseline_toBaselineOf="@id/totalTitle"
        app:fontFamily="@font/nanum_square_r" />

    <TextView
        android:id="@+id/totalUnitTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16.7dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        android:text=" 개"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

</android.support.constraint.ConstraintLayout>