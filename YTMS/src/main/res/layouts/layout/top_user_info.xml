<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="#999999">

    <TextView
        android:id="@+id/userNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="13.3dp"
        android:paddingEnd="13.3dp"
        android:gravity="center_vertical"
        android:text="용마로지스"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:drawableStart="@drawable/icon_profile"
        android:drawablePadding="7.7dp"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:onClick="onClick"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/locationImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6.3dp"
        android:src="@drawable/icon_position"
        app:layout_constraintEnd_toStartOf="@id/addressBarrier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/addressBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="addressTxt0,addressTxt1"
        app:barrierDirection="start" />

    <TextView
        android:id="@+id/addressTxt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:includeFontPadding="false"
        android:text="현재 위치"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addressTxt1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/addressTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="13.3sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toBottomOf="@+id/addressTxt0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/addressTxt0" />

</android.support.constraint.ConstraintLayout>
