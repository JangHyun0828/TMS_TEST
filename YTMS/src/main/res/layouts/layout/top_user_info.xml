<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="#999999">

    <TextView
        android:id="@+id/userNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13.3dp"
        android:text="용마로지스"
        android:textSize="16sp"
        android:textColor="#323332"
        android:drawableStart="@drawable/icon_profile"
        android:drawablePadding="7.7dp"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        android:onClick="onClick"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/locationImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6.3dp"
        android:src="@drawable/icon_position"
        app:layout_constraintEnd_toStartOf="@+id/userLocAddrTxt1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/userLocAddrTxt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="17.3sp"
        android:textColor="#323332"
        android:text="서울 구로구"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/userLocAddrTxt1"
        app:layout_constraintStart_toStartOf="@id/userLocAddrTxt1" />

    <TextView
        android:id="@+id/userLocAddrTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25.3dp"
        android:includeFontPadding="false"
        android:textSize="13.3sp"
        android:textColor="#323332"
        android:text="구로동 187-10"
        android:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLocAddrTxt0"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
