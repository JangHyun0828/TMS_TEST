<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="39.7dp"
    android:background="#c5c8c9">

    <ImageButton
        android:id="@+id/prevDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/selector_button_calendar_prev"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/fromDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="#323332"
        android:text="0000.00.00"
        android:drawablePadding="6.7dp"
        android:drawableEnd="@drawable/selector_button_calendar"
        android:background="@null"
        app:fontFamily="@font/my_nanum_square_r"
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@id/dateDividerTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/dateDividerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#6b6b6b"
        android:text="~"
        app:fontFamily="@font/my_nanum_square_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/toDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="7.7dp"
        android:textSize="16sp"
        android:textColor="#323332"
        android:text="0000.00.00"
        android:drawablePadding="6.7dp"
        android:drawableEnd="@drawable/selector_button_calendar"
        android:background="@null"
        app:fontFamily="@font/my_nanum_square_r"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@id/dateDividerTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/nextDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/selector_button_calendar_next"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
