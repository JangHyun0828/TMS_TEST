<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="37.7dp">

    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.3dp"
        android:src="@drawable/customer_menu_4_sub_1_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/minusBtn"
        app:layout_constraintTop_toTopOf="@+id/minusBtn" />

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26.3dp"
        android:src="@drawable/minus"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemImg"
        app:layout_constraintEnd_toStartOf="@id/itemsCntEdit" />

    <EditText
        android:id="@+id/itemsCntEdit"
        android:layout_width="81.3dp"
        android:layout_height="41.3dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="5"
        android:inputType="numberSigned"
        android:textSize="16.7sp"
        android:textColor="#4e4d4d"
        android:background="@drawable/bg_input_rect_round_white_stroke_gray"
        android:fontFamily="@font/my_nanum_square_r"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/minusBtn"
        app:layout_constraintStart_toEndOf="@id/minusBtn"
        app:layout_constraintEnd_toStartOf="@id/plusBtn" />

    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.7dp"
        android:layout_marginEnd="15.6dp"
        android:src="@drawable/plus"
        android:background="@null"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="@id/minusBtn"
        app:layout_constraintStart_toEndOf="@id/itemsCntEdit"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>