<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/call_center_height"
    android:clickable="true"
    android:background="@color/main_theme"
    android:onClick="onClick">

    <TextView
        android:id="@+id/callCenterTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="고객센터"
        android:drawableStart="@drawable/call"
        android:drawablePadding="10dp"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/callCenterPhoneNoTxt" />

    <TextView
        android:id="@+id/callCenterPhoneNoTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="6.3dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/customer_call_center_phone_no"
        app:fontFamily="@font/my_nanum_square_r"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/callCenterTxt"
        app:layout_constraintBaseline_toBaselineOf="@+id/callCenterTxt" />

</android.support.constraint.ConstraintLayout>
