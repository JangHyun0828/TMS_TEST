<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="42.3dp"
    android:background="#e5e5e5">

    <TextView
        android:id="@+id/sumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        android:text="미발송"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintEnd_toStartOf="@id/sumTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/sumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="0"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintEnd_toStartOf="@id/sumUnitTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/sumUnitTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11.3dp"
        android:textSize="16sp"
        android:textColor="#4e4d4d"
        android:text="건"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
