        android:id="@+id/menuBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:drawablePadding="8.3dp"
        android:drawableStart="@drawable/selector_icon_main_menu_direct_delivery_query"
        android:paddingStart="44.7dp"
        android:textColor="#4e4d4d"
        android:textSize="13.2dp"
        android:text="직송조회"
        android:background="@drawable/selector_button_main_menu_small"
        android:stateListAnimator="@null"
        android:onClick="onClick"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn3"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="@id/menuBtn0"
        app:layout_constraintEnd_toStartOf="@id/menuBtn5" />

