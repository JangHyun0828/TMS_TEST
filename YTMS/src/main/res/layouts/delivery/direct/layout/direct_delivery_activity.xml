<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/contentView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomCenterInfoView">

        <include
            android:id="@+id/appbar"
            layout="@layout/appbar" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="11.3dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <!-- appbar_scrolling_view_behavior: appbar영역을 침범하도록 설정 -->

            <android.support.constraint.Guideline
                android:id="@+id/startGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <android.support.constraint.Guideline
                android:id="@+id/endGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

            <Button
                android:id="@+id/curDateBtn"
                style="@style/EditTextRoundNormal"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/selector_drop_down_arrow"
                android:text="0000.00.00"
                android:stateListAnimator="@null"
                android:onClick="onClick"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/startGuideline"
                app:layout_constraintEnd_toStartOf="@+id/centerNameEdit" />

            <EditText
                android:id="@+id/centerNameEdit"
                style="@style/EditTextRoundNormal"
                android:layout_width="0dp"
                android:layout_marginStart="15.3dp"
                android:hint="거래처명"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toTopOf="@id/curDateBtn"
                app:layout_constraintStart_toEndOf="@id/curDateBtn"
                app:layout_constraintEnd_toStartOf="@id/endGuideline" />

            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="32dp"
                android:layout_height="0dp"
                android:layout_margin="0.7dp"
                android:src="@drawable/center_m_5_sub_4_1_search"
                android:background="@drawable/selector_button_on_edit_round_normal"
                android:stateListAnimator="@null"
                android:onClick="onClick"
                app:layout_constraintTop_toTopOf="@+id/centerNameEdit"
                app:layout_constraintBottom_toBottomOf="@+id/centerNameEdit"
                app:layout_constraintEnd_toEndOf="@id/centerNameEdit" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_round_white"
                app:layout_constraintTop_toTopOf="@+id/column0Txt"
                app:layout_constraintBottom_toBottomOf="@+id/searchResultList"
                app:layout_constraintStart_toEndOf="@id/startGuideline"
                app:layout_constraintEnd_toStartOf="@id/endGuideline" />

            <TextView
                android:id="@+id/column0Txt"
                style="@style/TextViewTableItem"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="조회결과 0건"
                app:layout_constraintStart_toEndOf="@id/startGuideline"
                app:layout_constraintTop_toBottomOf="@id/curDateBtn"
                app:layout_constraintEnd_toStartOf="@id/column1Txt" />

            <TextView
                android:id="@+id/column1Txt"
                style="@style/TextViewTableItem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="즐겨찾기 추가"
                app:layout_constraintTop_toTopOf="@id/column0Txt"
                app:layout_constraintBottom_toBottomOf="@id/column0Txt"
                app:layout_constraintStart_toEndOf="@id/column0Txt"
                app:layout_constraintEnd_toStartOf="@id/endGuideline" />

            <View
                android:id="@+id/columnDivider"
                style="@style/DividerLineTable"
                android:layout_height="1.7dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintTop_toBottomOf="@+id/column0Txt" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/searchResultList"
                style="@style/Scrollbar"
                android:layout_width="0dp"
                android:layout_height="185.3dp"
                app:layout_constraintTop_toBottomOf="@id/columnDivider"
                app:layout_constraintStart_toEndOf="@id/startGuideline"
                app:layout_constraintEnd_toStartOf="@id/endGuideline" />

        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/bottomSlide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8.3dp"
            android:clipToPadding="true"
            app:layout_behavior="@string/bottom_sheet_behavior">
            <!--android:background="#ff3366ff"-->

            <View
                android:id="@+id/slideBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_round_white" />

            <fragment
                android:id="@+id/favoriteFragment"
                class="com.neognp.ytms.delivery.direct.DirectDeliveryFavoriteFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36dp" />

            <ImageButton
                android:id="@+id/slideHandlerBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_circle_white" />

            <ImageView
                android:id="@+id/slideHandlerArw"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/slideHandlerBtn"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baseline_expand_less_black_36" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <!-- bottomsheet slide title-->
    <com.trevor.library.widget.FontTextView
        android:id="@+id/btmSlideTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:text="즐겨찾기"
        android:textColor="@color/white"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

