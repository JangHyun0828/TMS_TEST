<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/dateView"
        layout="@layout/date_range_selector"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <TextView
        android:id="@+id/columnTxt0"
        android:layout_width="0dp"
        android:layout_height="34.3dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="연번"
        app:layout_constraintTop_toBottomOf="@+id/dateView"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/columnTxt1"
        app:layout_constraintWidth_percent="0.1"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/columnTxt1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="화주명"
        app:layout_constraintTop_toTopOf="@+id/columnTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/columnTxt0"
        app:layout_constraintStart_toEndOf="@id/columnTxt0"
        app:layout_constraintEnd_toStartOf="@id/columnTxt2"
        app:layout_constraintWidth_percent="0.4"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/columnTxt2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="요청일"
        app:layout_constraintTop_toTopOf="@+id/columnTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/columnTxt0"
        app:layout_constraintStart_toEndOf="@id/columnTxt1"
        app:layout_constraintEnd_toStartOf="@id/columnTxt3"
        app:layout_constraintWidth_percent="0.25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/columnTxt3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="처리"
        app:layout_constraintTop_toTopOf="@+id/columnTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/columnTxt0"
        app:layout_constraintStart_toEndOf="@id/columnTxt2"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintWidth_percent="0.25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <View
        android:id="@+id/topDivider"
        android:layout_width="0dp"
        android:layout_height="1.3dp"
        android:background="@color/main_theme"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@+id/columnTxt0" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="35.6dp"
        app:layout_constraintTop_toBottomOf="@+id/dateView"
        app:layout_constraintBottom_toTopOf="@+id/btmDivider"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            style="@style/Scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingEnd="4dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/btmDivider"
        android:layout_width="0dp"
        android:layout_height="1.3dp"
        android:background="@color/main_theme"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toTopOf="@+id/totalTitle" />

    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="0dp"
        android:layout_height="34.3dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="합계"
        app:layout_constraintStart_toStartOf="@id/columnTxt0"
        app:layout_constraintEnd_toEndOf="@id/columnTxt0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fontFamily="@font/nanum_square_r" />

    <TextView
        android:id="@+id/totalTxt"
        android:layout_width="0dp"
        android:layout_height="34.3dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/main_theme"
        android:text="0"
        app:layout_constraintTop_toTopOf="@+id/totalTitle"
        app:layout_constraintBottom_toBottomOf="@+id/totalTitle"
        app:layout_constraintStart_toStartOf="@id/columnTxt3"
        app:layout_constraintEnd_toEndOf="@id/columnTxt3"
        app:fontFamily="@font/nanum_square_r" />

</android.support.constraint.ConstraintLayout>
