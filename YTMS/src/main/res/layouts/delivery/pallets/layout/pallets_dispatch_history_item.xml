<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="46.7dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="37.3dp"
        android:gravity="center_vertical|start"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="연번"
        app:layout_constraintTop_toTopOf="@id/dataTxt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dataTxt1"
        app:layout_constraintHorizontal_weight="20"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="화주명"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt0"
        app:layout_constraintEnd_toStartOf="@id/dataTxt2"
        app:layout_constraintHorizontal_weight="30"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="0000.00.00"
        app:layout_constraintTop_toTopOf="@id/dataTxt1"
        app:layout_constraintStart_toEndOf="@id/dataTxt1"
        app:layout_constraintEnd_toStartOf="@id/dataTxt3"
        app:layout_constraintHorizontal_weight="25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#253e66"
        android:text="00"
        app:layout_constraintTop_toTopOf="@id/dataTxt1"
        app:layout_constraintStart_toEndOf="@id/dataTxt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="11.7dp"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@id/dataTxt1"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>