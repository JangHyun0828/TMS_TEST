<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="30.7dp">

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="30dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="연번"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dataTxt1"
        app:layout_constraintWidth_percent="0.1"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="화주명"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt0"
        app:layout_constraintEnd_toStartOf="@id/dataTxt2"
        app:layout_constraintWidth_percent="0.4"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="0000.00.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt1"
        app:layout_constraintEnd_toStartOf="@id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="발송"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <Button
        android:id="@+id/dataBtn3"
        android:layout_width="59.7dp"
        android:layout_height="23.3dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="@color/white"
        android:text="접수"
        android:background="@drawable/selector_button_round_rect_small_main_theme"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/dataTxt3"
        app:layout_constraintBottom_toBottomOf="@id/dataTxt3"
        app:layout_constraintStart_toStartOf="@id/dataTxt3"
        app:layout_constraintEnd_toEndOf="@id/dataTxt3"
        app:layout_constraintWidth_percent="0.25"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@id/dataTxt1" />

</android.support.constraint.ConstraintLayout>