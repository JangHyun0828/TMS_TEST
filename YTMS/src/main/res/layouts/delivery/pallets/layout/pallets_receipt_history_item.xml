<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="46.7dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="27.3dp"
        android:gravity="center_vertical|start"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dataTxt1"
        app:layout_constraintHorizontal_weight="15"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/date_check_box_off"
        app:layout_constraintStart_toStartOf="@id/dataTxt0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="화주명"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt0"
        app:layout_constraintEnd_toStartOf="@id/dataTxt2"
        app:layout_constraintHorizontal_weight="30"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="0000.00.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt1"
        app:layout_constraintEnd_toStartOf="@id/dataTxt3"
        app:layout_constraintHorizontal_weight="20"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#4d4c4c"
        android:text="000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt2"
        app:layout_constraintEnd_toStartOf="@id/dataHolder4"
        app:layout_constraintHorizontal_weight="15"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <android.support.constraint.Placeholder
        android:id="@+id/dataHolder4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dataTxt3"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/receiptBtn"
        android:layout_width="47.7dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="@color/white"
        android:text="접수"
        android:background="@drawable/selector_button_rect_round_sky_small"
        android:stateListAnimator="@null"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/dataHolder4"
        app:layout_constraintEnd_toEndOf="@id/dataHolder4" />

    <Button
        android:id="@+id/dispatchBtn"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:maxWidth="47.7dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="@color/white"
        android:text="발송"
        android:background="@drawable/selector_button_rect_round_navy_small"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toTopOf="@id/receiptBtn"
        app:layout_constraintBottom_toBottomOf="@id/receiptBtn"
        app:layout_constraintStart_toStartOf="@id/receiptBtn"
        app:layout_constraintEnd_toEndOf="@id/receiptBtn" />

    <Button
        android:id="@+id/completionBtn"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:textSize="13.3sp"
        android:textColor="#a6a5a5"
        android:text="완료"
        android:background="@drawable/selector_button_rect_round_white_stroke_gray_small"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintTop_toTopOf="@id/receiptBtn"
        app:layout_constraintBottom_toBottomOf="@id/receiptBtn"
        app:layout_constraintStart_toStartOf="@id/receiptBtn"
        app:layout_constraintEnd_toEndOf="@id/receiptBtn" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>