<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/buttonView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/DropDownSelector_minHeight"
    android:background="@drawable/selector_drop_down">

    <TextView
        android:id="@+id/mainTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7.3dp"
        android:textColor="#4e4d4d"
        android:textSize="14.8sp"
        android:text="mainTitle"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"/>

    <TextView
        android:id="@+id/subTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/toggleImg"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textColor="#4e4d4d"
        android:textSize="14.8sp"
        android:text="subTitle"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"/>

    <TextView
        android:id="@+id/hintTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mainTitleTxt"
        android:layout_toStartOf="@+id/toggleImg"
        android:layout_centerVertical="true"
        android:textColor="#ffc9caca"
        android:textSize="14.8sp"
        android:text="hint"
        android:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/toggleImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7.3dp"
        android:layout_marginEnd="7.3dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_drop_down_arrow" />

</RelativeLayout>
