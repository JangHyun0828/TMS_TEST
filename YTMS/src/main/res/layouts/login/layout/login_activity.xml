<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_theme">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_master_login_logo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/appNameTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/appNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:src="@drawable/img_master_font"
        app:layout_constraintTop_toBottomOf="@+id/logoImg"
        app:layout_constraintBottom_toTopOf="@+id/idEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/idEdit"
        style="@style/EditTextRoundMain"
        android:layout_width="match_parent"
        android:layout_marginTop="39.7dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:hint="아이디"
        android:letterSpacing="0.2"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTxt"
        app:layout_constraintBottom_toTopOf="@+id/pwdEdit" />

    <EditText
        android:id="@+id/pwdEdit"
        style="@style/EditTextRoundMain"
        android:layout_width="0dp"
        android:layout_marginTop="16.7dp"
        android:hint="비밀번호"
        android:letterSpacing="0.2"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        app:layout_constraintStart_toStartOf="@+id/idEdit"
        app:layout_constraintEnd_toEndOf="@+id/idEdit"
        app:layout_constraintTop_toBottomOf="@+id/idEdit"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"> <!-- CAUTION my_nanum_square_b 폰트는 textPassword 지원 못함-->
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/loginBtn"
        style="@style/ButtonRoundLogin"
        android:layout_width="0dp"
        android:layout_marginTop="16.7dp"
        android:layout_marginBottom="141.7dp"
        android:text="로그인"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/pwdEdit"
        app:layout_constraintBottom_toBottomOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="@+id/idEdit"
        app:layout_constraintEnd_toEndOf="@+id/idEdit" />

    <CheckBox
        android:id="@+id/idSaveCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.7dp"
        android:layout_marginStart="20.3dp"
        android:paddingStart="6.3dp"
        android:textSize="16.7sp"
        android:textColor="@color/white"
        android:text="아이디 저장"
        android:button="@drawable/selector_checkbox_white"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintStart_toStartOf="@id/loginBtn"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <CheckBox
        android:id="@+id/autoLoginCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21.7dp"
        android:paddingStart="6.3dp"
        android:textSize="16.7sp"
        android:textColor="@color/white"
        android:text="자동로그인"
        android:button="@drawable/selector_checkbox_white"
        app:layout_constraintTop_toTopOf="@+id/idSaveCheck"
        app:layout_constraintEnd_toEndOf="@id/loginBtn"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <android.support.constraint.Group
        android:id="@+id/testAccountGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="userDatInitCheck, testAccountTxt0, testAccountTxt1, testAccountTxt2, testAccountTxt3" />

    <CheckBox
        android:id="@+id/userDatInitCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingStart="7.3dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="계정 DB 초기화"
        android:button="@drawable/selector_checkbox_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/testAccountTxt0"
        app:layout_constraintBottom_toBottomOf="@+id/testAccountTxt3"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/testAccountTxt0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="end|center_vertical"
        android:text="화주1 : 01011111111 / 1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoLoginCheck"
        app:layout_constraintBottom_toTopOf="@+id/testAccountTxt1"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/testAccountTxt1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:text="차주1 : 01012345678 / 1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/testAccountTxt0"
        app:layout_constraintTop_toBottomOf="@+id/testAccountTxt0"
        app:layout_constraintBottom_toTopOf="@+id/testAccountTxt2"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/testAccountTxt2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:text="배송센터: 01099999999 / 1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/testAccountTxt0"
        app:layout_constraintTop_toBottomOf="@+id/testAccountTxt1"
        app:layout_constraintBottom_toTopOf="@+id/testAccountTxt3"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <TextView
        android:id="@+id/testAccountTxt3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:text="보관센터: 01088888888 / 1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/testAccountTxt0"
        app:layout_constraintTop_toBottomOf="@+id/testAccountTxt2"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_center_height"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
