<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/topUserInfoView"
        layout="@layout/top_user_info"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />    

    <Button
        android:id="@+id/menuBtn0"
        style="@style/ButtonMainMenu"
        android:layout_marginTop="8.3dp"
        android:gravity="center_vertical|end"
        android:paddingEnd="99dp"
        android:text="차량요청"
        android:background="@drawable/selector_button_main_menu_car_request"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/topUserInfoView"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuBtn0IconTxt"
        style="@style/TextViewMainMenuIcon"
        android:layout_marginStart="31dp"
        android:text="접수"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn0"
        app:layout_constraintStart_toStartOf="@id/menuBtn0" />

    <Button
        android:id="@+id/menuBtn1"
        style="@style/ButtonMainMenu"
        android:layout_marginTop="4dp"
        android:background="@drawable/selector_button_alloc_car"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn0"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/menuBtnDivider0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="162.3dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1"
        app:layout_constraintTop_toTopOf="@id/menuBtn1"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn1" />

    <ImageView
        android:id="@+id/menuBtnDivider1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88.7dp"
        android:src="@drawable/circle_line_1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1"
        app:layout_constraintTop_toTopOf="@id/menuBtn1"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn1" />

    <TextView
        android:id="@+id/menuBtn1IconTxt"
        style="@style/TextViewMainMenuIcon"
        android:layout_marginStart="31dp"
        android:text="배차"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn1"
        app:layout_constraintStart_toStartOf="@id/menuBtn1" />

    <TextView
        android:id="@+id/menuBtn1SubTitle0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginTop="6.5dp"
        android:layout_marginEnd="21dp"
        android:text="차량\n접수"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1"
        app:layout_constraintEnd_toStartOf="@id/menuBtnDivider0" />

    <TextView
        android:id="@+id/menuBtn1CntTxt0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="#0096eb"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1SubTitle0"
        app:layout_constraintEnd_toStartOf="@id/menuBtn1CntUnit0" />

    <TextView
        android:id="@+id/menuBtn1CntUnit0"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="대"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1SubTitle0"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1CntTxt0" />

    <TextView
        android:id="@+id/menuBtn1SubTitle1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="16.7dp"
        android:text="배차\n진행"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtnDivider0" />

    <TextView
        android:id="@+id/menuBtn1CntTxt1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="#0096eb"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1SubTitle1"
        app:layout_constraintEnd_toStartOf="@id/menuBtn1CntUnit1" />

    <TextView
        android:id="@+id/menuBtn1CntUnit1"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="대"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1SubTitle1"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1CntTxt1" />

    <TextView
        android:id="@+id/menuBtn1SubTitle2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="16.7dp"
        android:text="배차\n완료"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1SubTitle0"
        app:layout_constraintStart_toEndOf="@id/menuBtnDivider1" />

    <TextView
        android:id="@+id/menuBtn1CntTxt2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="2.5dp"
        android:textColor="#0096eb"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1SubTitle0"
        app:layout_constraintEnd_toStartOf="@id/menuBtn1CntUnit2" />

    <TextView
        android:id="@+id/menuBtn1CntUnit2"
        style="@style/TextViewMainMenuSub"
        android:layout_marginStart="1dp"
        android:text="대"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1SubTitle2"
        app:layout_constraintTop_toTopOf="@+id/menuBtn1CntTxt2" />

    <TextView
        android:id="@+id/carAllocBadgeCntTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76.1dp"
        android:layout_marginEnd="21dp"
        android:minWidth="23dp"
        android:minHeight="23dp"
        android:gravity="center"
        android:textSize="14.8sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge"
        android:text="N"
        android:fontFamily="@font/my_noto_sans_kr_bold_hestia"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn1"
        app:layout_constraintEnd_toEndOf="@id/menuBtn1" />

    <Button
        android:id="@+id/menuBtn2"
        style="@style/ButtonMainMenu"
        android:layout_marginTop="8.3dp"
        android:paddingEnd="89.7dp"
        android:text="팔레트 요청"
        android:background="@drawable/selector_button_main_menu_pallets"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn1"
        app:layout_constraintBottom_toTopOf="@+id/menuBtn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuBtn2IconTxt"
        style="@style/TextViewMainMenuIcon"
        android:layout_marginStart="30.7dp"
        android:text="접수"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn2"
        app:layout_constraintStart_toStartOf="@id/menuBtn2" />

    <Button
        android:id="@+id/menuBtn3"
        style="@style/ButtonMainMenu"
        android:layout_marginTop="8.3dp"
        android:paddingEnd="99dp"
        android:text="공지사항"
        android:background="@drawable/selector_button_main_menu_notice"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/menuBtn2"
        app:layout_constraintBottom_toTopOf="@+id/bottomCenterInfoView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuBtn3IconTxt"
        style="@style/TextViewMainMenuIcon"
        android:layout_marginStart="15dp"
        android:text="공지사항"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn3"
        app:layout_constraintStart_toStartOf="@id/menuBtn3" />

    <TextView
        android:id="@+id/noticeBadgeCntTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76.1dp"
        android:layout_marginEnd="21dp"
        android:minWidth="23dp"
        android:minHeight="23dp"
        android:gravity="center"
        android:textSize="14.8sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge"
        android:text="0"
        android:fontFamily="@font/my_nanum_square_eb"
        app:layout_constraintBottom_toBottomOf="@+id/menuBtn3"
        app:layout_constraintEnd_toEndOf="@id/menuBtn3"
        android:visibility="invisible"/>

    <include
        android:id="@+id/bottomCenterInfoView"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
