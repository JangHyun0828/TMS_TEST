<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:clickable="true">

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <Button
        android:id="@+id/carIncreaseBtn"
        style="@style/ButtonMainMenuFullRound"
        android:layout_marginTop="16.7dp"
        android:paddingStart="112.7dp"
        android:text="배차 추가, 감차"
        android:drawableStart="@drawable/selector_icon_truck"
        android:drawablePadding="11.7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline" />

    <ImageView
        android:id="@+id/carIncreaseGuideArw0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/img_play"
        app:layout_constraintStart_toStartOf="@id/carIncreaseBtn"
        app:layout_constraintTop_toTopOf="@+id/carIncreaseGuideTxt0" />

    <TextView
        android:id="@+id/carIncreaseGuideTxt0"
        style="@style/TextViewGuide"
        android:layout_marginStart="7.7dp"
        android:layout_marginTop="13.3dp"
        android:text="@string/car_alloc_increase_decrease_0"
        app:layout_constraintTop_toBottomOf="@+id/carIncreaseBtn"
        app:layout_constraintStart_toEndOf="@id/carIncreaseGuideArw0"
        app:layout_constraintEnd_toEndOf="@id/carIncreaseBtn" />

    <ImageView
        android:id="@+id/carIncreaseGuideArw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/img_play"
        app:layout_constraintStart_toStartOf="@id/carIncreaseGuideArw0"
        app:layout_constraintTop_toTopOf="@+id/carIncreaseGuideTxt1" />

    <TextView
        android:id="@+id/carIncreaseGuideTxt1"
        style="@style/TextViewGuide"
        android:layout_marginTop="16.7dp"
        android:text="@string/car_alloc_increase_decrease_1"
        app:layout_constraintTop_toBottomOf="@+id/carIncreaseGuideTxt0"
        app:layout_constraintStart_toStartOf="@id/carIncreaseGuideTxt0"
        app:layout_constraintEnd_toEndOf="@id/carIncreaseGuideTxt0" />

    <Button
        android:id="@+id/carCountFixBtn"
        style="@style/ButtonMainMenuFullRound"
        android:layout_marginTop="40dp"
        android:paddingStart="112.7dp"
        android:text="고정 대수 설정"
        android:drawableStart="@drawable/selector_icon_pin"
        android:drawablePadding="11.3dp"
        app:layout_constraintTop_toBottomOf="@+id/carIncreaseGuideTxt1"
        app:layout_constraintStart_toStartOf="@id/carIncreaseBtn"
        app:layout_constraintEnd_toEndOf="@id/carIncreaseBtn" />

    <ImageView
        android:id="@+id/carCountFixGuideArw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/img_play"
        app:layout_constraintStart_toStartOf="@id/carIncreaseBtn"
        app:layout_constraintTop_toTopOf="@+id/carCountFixGuideTxt" />

    <TextView
        android:id="@+id/carCountFixGuideTxt"
        style="@style/TextViewGuide"
        android:layout_marginTop="16.7dp"
        android:text="@string/car_count_fix_setting"
        app:layout_constraintTop_toBottomOf="@+id/carCountFixBtn"
        app:layout_constraintStart_toStartOf="@id/carIncreaseGuideTxt0"
        app:layout_constraintEnd_toEndOf="@id/carIncreaseGuideTxt0" />

</android.support.constraint.ConstraintLayout>