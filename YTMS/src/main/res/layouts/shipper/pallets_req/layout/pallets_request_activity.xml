<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <include
        android:id="@+id/dateView"
        layout="@layout/date_selector"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

    <android.support.constraint.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/contentScroll"
        style="@style/Scrollbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.3dp"
        android:clipToPadding="false"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/dateView"
        app:layout_constraintBottom_toTopOf="@+id/bottomBtn0"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_stroke_gray">

            <TextView
                android:id="@+id/contentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="center_vertical|end"
                android:textSize="16sp"
                android:textColor="#4d4c4c"
                android:text="요청여부: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contentTxt"
                app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

            <TextView
                android:id="@+id/contentTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="center_vertical|start"
                android:textSize="19sp"
                android:textColor="@color/main_theme"
                app:layout_constraintStart_toEndOf="@id/contentTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/bottomBtn0"
        style="@style/ButtonRoundMain"
        android:layout_marginTop="8.3dp"
        android:text="요청"
        android:background="@drawable/selector_button_round_rect_navy"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/bottomBtn1"
        app:layout_constraintTop_toBottomOf="@+id/contentScroll"
        app:layout_constraintBottom_toTopOf="@id/bottomSpace" />

    <Button
        android:id="@+id/bottomBtn1"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="10dp"
        android:text="요청내역 확인"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/bottomBtn0"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="@+id/bottomBtn0" />

    <Space
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="8.3dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/bottomBtn0"
        app:layout_constraintBottom_toTopOf="@id/callCenterBtn" />

    <Button
        android:id="@+id/callCenterBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginBottom="6.7dp"
        android:paddingStart="95dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|start"
        android:drawableStart="@drawable/call"
        android:text="팔레트 담당자 연결"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/endGuideline"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
