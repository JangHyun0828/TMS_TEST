<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/infoScroll"
        style="@style/Scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clipToPadding="false"
        android:background="@drawable/bg_round_white"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/guideTxt">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:paddingBottom="5.4dp"
            app:columnCount="2">

            <TextView
                style="@style/TextViewTableItem"
                android:minWidth="111.7dp"
                android:text="아이디"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/idTxt"
                style="@style/TextViewTableItem"
                android:gravity="center_vertical|start"
                android:text="아이디"
                app:layout_gravity="fill" />

            <TextView
                style="@style/TextViewTableItem"
                android:minWidth="111.7dp"
                android:text="비밀번호"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/pwdTxt"
                style="@style/TextViewTableItem"
                android:gravity="center_vertical|start"
                android:drawableEnd="@drawable/icon_lock"
                android:drawablePadding="4.7dp"
                android:text="비밀번호 변경"
                android:textColor="@color/main_theme"
                app:layout_gravity="start" />

            <TextView
                style="@style/TextViewTableItem"
                android:minWidth="111.7dp"
                android:text="담당자"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/nameTxt"
                style="@style/TextViewTableItem"
                android:gravity="center_vertical|start"
                android:text="담당자님"
                app:layout_gravity="fill" />

            <TextView
                style="@style/TextViewTableItem"
                android:minWidth="111.7dp"
                android:text="회사명"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/companyTxt"
                style="@style/TextViewTableItem"
                android:gravity="center_vertical|start"
                android:text="회사명"
                app:layout_gravity="fill" />

        </android.support.v7.widget.GridLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/guideTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21.3dp"
        android:includeFontPadding="false"
        android:letterSpacing="-0.01"
        android:drawableStart="@drawable/info"
        android:drawablePadding="3.7dp"
        android:textSize="13.3sp"
        android:textColor="@color/main_theme"
        android:text="담당자님 변경 시, 용마로지스로 연락주시면 감사하겠습니다."
        app:layout_constraintStart_toStartOf="@+id/infoScroll"
        app:layout_constraintEnd_toEndOf="@+id/infoScroll"
        app:layout_constraintTop_toBottomOf="@+id/infoScroll"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <Button
        android:id="@+id/logoutBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginBottom="8.3dp"
        android:text="로그아웃"
        app:layout_constraintStart_toStartOf="@+id/infoScroll"
        app:layout_constraintEnd_toEndOf="@+id/infoScroll"
        app:layout_constraintBottom_toTopOf="@id/callCenterBtn" />

    <include
        android:id="@+id/callCenterBtn"
        layout="@layout/bottom_center_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_center_height"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
