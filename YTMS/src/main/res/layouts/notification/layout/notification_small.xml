<?xml version="1.0" encoding="utf-8"?>

<!-- CAUTION Notification 안의 TextView는 style="@style/TextAppearance.Compat.Notification"를 적용해야 제대로 표시됨 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dateTxt"
        style="@style/TextAppearance.Compat.Notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textColor="#6b6b6b"
        android:text="000.00.00 00:00:00"
        app:fontFamily="@font/my_nanum_square_r"/>

    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTxt"
        android:layout_marginTop="8dp"
        android:src="@drawable/customer_menu_4_sub_1_2" />

    <TextView
        android:id="@+id/titleTxt"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iconImg"
        android:layout_toEndOf="@+id/iconImg"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:text="제목"
        android:textColor="#3668a5"
        android:textSize="16sp"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        android:background="#bfd7f1"/>

    <TextView
        android:id="@+id/textTxt"
        style="@style/TextAppearance.Compat.Notification.Line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iconImg"
        android:layout_below="@+id/iconImg"
        android:layout_marginTop="11.3dp"
        android:text="내용"
        android:textColor="#4e4d4d"
        android:textSize="13.3sp"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

</RelativeLayout>