<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:gravity="left"
                android:left="4dp">
                <bitmap android:gravity="left"
                    android:src="@drawable/bg_center_m_5_left_on" />
            </item>
            <item android:top="25dp"
                android:left="27dp">
                <bitmap android:gravity="top|left"
                    android:src="@drawable/menu_palette_on" />
            </item>
            <item android:left="67.3dp">
                <bitmap android:gravity="right|top"
                    android:src="@drawable/bg_center_m_5_right" />
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item android:state_focused="false"
        android:state_pressed="false">
        <layer-list>
            <item android:gravity="left">
                <bitmap android:gravity="left"
                    android:src="@drawable/bg_m_5_left_off" />
            </item>
            <item android:top="25dp"
                android:left="27dp">
                <bitmap android:gravity="top|left"
                    android:src="@drawable/menu_palette_off" />
            </item>
            <item android:left="67.3dp">
                <bitmap android:gravity="right|top"
                    android:src="@drawable/bg_center_m_5_right" />
            </item>
        </layer-list>
    </item>

</selector>