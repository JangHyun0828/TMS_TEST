<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:gravity="left">
                <bitmap android:gravity="left"
                    android:src="@drawable/bg_m_4_left_on" />
            </item>
            <item android:top="22.3dp"
                android:left="38dp">
                <bitmap android:gravity="top|left"
                    android:src="@drawable/menu_notice_on" />
            </item>
            <item android:left="76.7dp">
                <bitmap android:gravity="right|top"
                    android:src="@drawable/bg_m_4_right" />
            </item>
        </layer-list>
    </item>

    <!-- normal -->
    <item android:state_focused="false"
        android:state_pressed="false">
        <layer-list>
            <item android:gravity="left">
                <bitmap android:gravity="left"
                    android:src="@drawable/bg_m_4_left_off" />
            </item>
            <item android:top="22.3dp"
                android:left="38dp">
                <bitmap android:gravity="top|left"
                    android:src="@drawable/menu_notice_off" />
            </item>
            <item android:left="76.7dp">
                <bitmap android:gravity="right|top"
                    android:src="@drawable/bg_m_4_right" />
            </item>
        </layer-list>
    </item>

</selector>