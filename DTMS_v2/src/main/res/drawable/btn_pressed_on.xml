<?xml version="1.0" encoding="utf-8"?>


<shape
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상-->
    <solid android:color = "@color/main_theme"/>

    <!-- 테두리 내부 여백-->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <!-- 테두리 설정 : 두께, 색상-->
    <stroke
        android:width="3dp"
        android:color="#FFFFFF">
    </stroke>

    <corners
        android:radius="10dp"/>

</shape>