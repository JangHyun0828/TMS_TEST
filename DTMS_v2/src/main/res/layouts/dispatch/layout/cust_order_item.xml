<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="98.7dp"
    android:paddingStart="10dp"
    android:paddingEnd="6dp"
    android:paddingBottom="15dp"
    android:background="@drawable/border1_white">

    <View
        android:id="@+id/leftBar"
        android:layout_width="4.3dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:background="#bfd7f1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dataTitle0"
        app:layout_constraintBottom_toBottomOf="@+id/dataTitle6" />

    <TextView
        android:id="@+id/dataTitle0"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 사업장 : "
        app:layout_constraintStart_toEndOf="@id/leftBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt1"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt0"
        android:layout_width="0dp"
        android:layout_height="23.3dp"
        android:layout_marginTop="3.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="발안공장"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle0"
        app:layout_constraintStart_toEndOf="@id/dataTitle0"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/dataTitle1"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 주문일자 : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt0"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt2"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt1"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="2020년 11월 07일"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle1"
        app:layout_constraintStart_toEndOf="@id/dataTitle1"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle2"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 납품요청일자  : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt1"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt3"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt2"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="2020년 11월 09일"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle2"
        app:layout_constraintStart_toEndOf="@id/dataTitle2"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle3"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 거래처 : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt2"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt4"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt3"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="플라스틱 1800 * 1800"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle3"
        app:layout_constraintStart_toEndOf="@id/dataTitle3"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle4"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 납품처 : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt3"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt5"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt4"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="반입"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle4"
        app:layout_constraintStart_toEndOf="@id/dataTitle4"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle5"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 수량 : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt4"
        app:layout_constraintBottom_toTopOf="@+id/dataTxt6"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt5"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:drawablePadding="7dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle5"
        app:layout_constraintStart_toEndOf="@id/dataTitle5"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTitle6"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#4d4c4c"
        android:text=" 제품명 : "
        app:layout_constraintStart_toStartOf="@id/dataTitle0"
        app:layout_constraintTop_toBottomOf="@+id/dataTxt5"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <TextView
        android:id="@+id/dataTxt6"
        android:layout_width="wrap_content"
        android:layout_height="23.3dp"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#3668a5"
        android:text="애호박20개(완제품)"
        app:layout_constraintBaseline_toBaselineOf="@+id/dataTitle6"
        app:layout_constraintStart_toEndOf="@id/dataTitle6"
        app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

    <Space
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/dataTxt6" />

</androidx.constraintlayout.widget.ConstraintLayout>