<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="23.3dp"
    android:paddingRight="23.3dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="타이틀"
            android:background="@color/main_theme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/my_noto_sans_kr_medium_hestia" />

        <TextView
            android:id="@+id/driverNmTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20.3dp"
            android:layout_marginEnd="20.3dp"
            android:minHeight="29.3dp"
            android:gravity="start|center_vertical"
            android:textSize="16.7sp"
            android:textColor="#4e4d4d"
            android:text="기사명 : "
            app:layout_constraintTop_toBottomOf="@+id/titleTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/noto_sans_kr_regular_hestia" />

        <TextView
            android:id="@+id/carNoTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="29.3dp"
            android:gravity="start|center_vertical"
            android:textSize="16.7sp"
            android:textColor="#4e4d4d"
            android:text="차량번호 : "
            app:layout_constraintTop_toBottomOf="@+id/driverNmTxt"
            app:layout_constraintStart_toStartOf="@+id/driverNmTxt"
            app:layout_constraintEnd_toEndOf="@+id/driverNmTxt"
            app:fontFamily="@font/noto_sans_kr_regular_hestia" />

        <TextView
            android:id="@+id/phoneNoTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="29.3dp"
            android:gravity="start|center_vertical"
            android:textSize="16.7sp"
            android:textColor="#4e4d4d"
            android:text="연락처 : "
            app:layout_constraintStart_toStartOf="@id/driverNmTxt"
            app:layout_constraintEnd_toEndOf="@id/driverNmTxt"
            app:layout_constraintTop_toBottomOf="@+id/carNoTxt"
            app:fontFamily="@font/noto_sans_kr_regular_hestia" />

        <TextView
            android:id="@+id/remarkTxt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="29.3dp"
            android:layout_marginTop="29.3dp"
            android:gravity="start|center_vertical"
            android:textSize="16.7sp"
            android:textColor="#4e4d4d"
            android:text="비고1 : "
            app:layout_constraintStart_toStartOf="@+id/driverNmTxt"
            app:layout_constraintEnd_toEndOf="@+id/driverNmTxt"
            app:layout_constraintTop_toBottomOf="@+id/phoneNoTxt"
            app:fontFamily="@font/my_noto_sans_kr_regular_hestia"/>

        <TextView
            android:id="@+id/remarkTxt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="29.3dp"
            android:gravity="start|center_vertical"
            android:textSize="16.7sp"
            android:textColor="#4e4d4d"
            android:text="비고2 : "
            app:layout_constraintStart_toStartOf="@+id/driverNmTxt"
            app:layout_constraintEnd_toEndOf="@+id/driverNmTxt"
            app:layout_constraintTop_toBottomOf="@+id/remarkTxt1"
            app:fontFamily="@font/my_noto_sans_kr_regular_hestia"/>

        <Button
            android:id="@+id/btmBtn0"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:minWidth="82dp"
            android:textSize="16.7sp"
            android:text="확인"
            android:textColor="#434d4d"
            android:background="@null"
            app:fontFamily="@font/noto_sans_kr_regular_hestia"
            app:layout_constraintTop_toBottomOf="@id/remarkTxt2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>