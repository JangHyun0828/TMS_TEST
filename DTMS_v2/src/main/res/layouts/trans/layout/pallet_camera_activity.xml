<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <fragment
        android:id="@+id/palletCameraFragment"
        android:name="com.neognp.dtmsapp_v1.car.PalletCameraFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guideBg"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/previewImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/palletCameraFragment"
        app:layout_constraintEnd_toEndOf="@+id/palletCameraFragment"
        app:layout_constraintTop_toTopOf="@+id/palletCameraFragment"
        app:layout_constraintBottom_toBottomOf="@+id/palletCameraFragment" />

    <ProgressBar
        android:id="@+id/imgProgress"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/palletCameraFragment"
        app:layout_constraintEnd_toEndOf="@+id/palletCameraFragment"
        app:layout_constraintTop_toTopOf="@+id/palletCameraFragment"
        app:layout_constraintBottom_toBottomOf="@+id/palletCameraFragment"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@color/main_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideBg">

        <TextView
            android:id="@+id/txt_nav_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인수증 촬영"
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/my_nanum_square_eb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/guideBg"
        android:layout_width="match_parent"
        android:layout_height="39.7dp"
        android:background="#c5c8c9"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <TextView
        android:id="@+id/guideTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:drawableEnd="@drawable/img_camera"
        android:drawablePadding="8dp"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#323332"
        android:text="초점이 맞춰지도록 놓아주세요"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia"
        app:layout_constraintStart_toStartOf="@+id/guideBg"
        app:layout_constraintEnd_toEndOf="@+id/guideBg"
        app:layout_constraintTop_toTopOf="@+id/guideBg"
        app:layout_constraintBottom_toBottomOf="@+id/guideBg" />

    <CheckBox
        android:id="@+id/noReceiptCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.3dp"
        android:textSize="13.3sp"
        android:textColor="#4e4d4d"
        android:text="인수증 없음"
        android:button="@null"
        android:drawableEnd="@drawable/selector_checkbox_black"
        android:drawablePadding="5.3dp"
        app:layout_constraintBottom_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline"
        app:fontFamily="@font/my_noto_sans_kr_regular_hestia" />

    <Button
        android:id="@+id/takePhotoBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8.3dp"
        android:text="촬영"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/showCameraBtn"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/showCameraBtn"
        style="@style/ButtonRoundMain"
        android:text="재촬영"
        android:visibility="gone"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@+id/takePhotoBtn"
        app:layout_constraintEnd_toStartOf="@+id/saveBtn"
        app:layout_constraintTop_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintBottom_toBottomOf="@+id/takePhotoBtn" />

    <Button
        android:id="@+id/saveBtn"
        style="@style/ButtonRoundMain"
        android:layout_marginStart="7.3dp"
        android:layout_marginEnd="10dp"
        android:text="저장"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@+id/showCameraBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/takePhotoBtn"
        app:layout_constraintBottom_toBottomOf="@+id/takePhotoBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
